<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="200dp"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f8bbd0"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/wp_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/iv_avator"
                android:layout_alignParentLeft="true"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                android:background="@drawable/bg_avator_48dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_avator"
                android:layout_marginLeft="4dp"
                android:text="nick nick"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_margin="4dp"
                android:background="#ec407a"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/wp_btm"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:background="#99cdc9c9"
            android:weightSum="1"
            >


            <LinearLayout
                android:id="@+id/wp_info_ex"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/anchor01"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="i like the thing!!!"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:textColor="#f5f5dc"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/anchor01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true">

                <include
                    layout="@layout/unit_price"
                    />

            </LinearLayout>

            <!--<TextView
               gnParentBottom="true"
                android:la android:id="@+id/tv_price"
                android:layout_alignParentRight="true"
                android:layout_aliyout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ï¿¥199"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:background="#e15b64"
                android:padding="4dp"
                 />-->
        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>